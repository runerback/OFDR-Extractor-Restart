<Window x:Class="OFDRExtractor.GUI.Controls.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviors="clr-namespace:OFDRExtractor.GUI.Mvvm.Behaviors"
        x:ClassModifier="internal" 
        Name="popup"
        Title="Popup" 
        Height="300" 
        Width="486" 
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource NoBorderWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Background="{StaticResource MainDeepBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Background="Transparent">
                <i:Interaction.Behaviors>
                    <behaviors:DragMoveBehavior />
                </i:Interaction.Behaviors>
                <TextBlock 
                    Text="{Binding Title, Mode=OneWay}"
                    Style="{StaticResource H3}"
                    Foreground="{StaticResource MainHighlightBrush}"/>
            </Grid>
        </Grid>
        
        <TabControl 
            Style="{StaticResource ReadOnlyTabControlStyle}" 
            SelectedIndex="{Binding PageIndex, Mode=OneWay}"
            Grid.Row="1">
            <TabItem Header="Basic">
                <Grid Margin="6">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="36" />
                    </Grid.RowDefinitions>
                    
                    <TextBox 
                        Text="{Binding Message, Mode=OneWay}"
                        Margin="6"
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        Style="{StaticResource SelectableTextBlockStyle}"
                        />
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button 
                            Content="Details" 
                            Grid.Column="1" 
                            VerticalAlignment="Center"
                            Visibility="{Binding HasDetails, Mode=OneWay, Converter={StaticResource VisibilityConverter}}"
                            Command="{Binding ShowDetailCommand, Mode=OneWay}"/>
                        <Button 
                            Content="Close"
                            Grid.Column="2" 
                            VerticalAlignment="Center">
                            <i:Interaction.Behaviors>
                                <behaviors:CloseWindowBehavior />
                            </i:Interaction.Behaviors>
                        </Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Details">
                <Grid Margin="6">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="36" />
                    </Grid.RowDefinitions>

                    <TextBox  
                        Text="{Binding Details, Mode=OneWay}"
                        Margin="6" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Disabled"
                        Style="{StaticResource SelectableTextBlockStyle}"
                        />

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button 
                            Content="Back" 
                            Grid.Column="1" 
                            VerticalAlignment="Center"
                            Visibility="{Binding HasDetails, Mode=OneWay}"
                            Command="{Binding HideDetailCommand, Mode=OneWay}"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
